<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    
    <!-- Navbar -->
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid"> 
            <span class="navbar-brand mb-0 h1">Task 5 Dashboard</span>
            <div class="d-flex align-items-center ms-auto flex-wrap">
                <span class="me-2 small text-truncate d-none d-sm-inline">
                    <% if (currentStatus === 'active') { %>
                        <span class="badge bg-success" title="Account activated, full rights granted"><%= currentStatus %></span>
                    <% } else if (currentStatus === 'unverified') { %>
                        <span class="badge bg-warning text-dark" title="Please verify your account to be able to perform actions"><%= currentStatus %></span>
                    <% } %>
                    Welcome, <%= currentUserEmail %>
                </span>


                <button class="btn btn-danger btn-sm" id="logOutBtn">Log Out</button>
            </div>
        </div>
    </nav>

    <!-- Feedback for user -->
    <div class="container mt-2">
        <div id="statusMessages"></div>
    </div>

    <main class="flex-fill">
        <div class="container mt-3">
            <% if (currentStatus === 'active') { %>
                
                <!-- Toolbar -->
                <div class="bg-body-tertiary p-2 mb-3">
                    <div class="row g-2">
                        <div class="col-6 col-sm-auto">
                            <button class="btn btn-primary w-100 btn-sm" id="blockBtn">Block</button>
                        </div>
                        <div class="col-6 col-sm-auto">
                            <button class="btn btn-secondary w-100 btn-sm" title="Unblock" id="unblockBtn">
                                <i class="bi bi-unlock"></i>
                            </button>
                        </div>
                        <div class="col-6 col-sm-auto">
                            <button class="btn btn-danger w-100 btn-sm" title="Delete" id="deleteBtn">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                        <div class="col-6 col-sm-auto">
                            <button class="btn btn-warning w-100 btn-sm" title="Delete unverified users" id="deleteUnverifiedBtn">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- User Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col"><input type="checkbox" id="selectAll"></th>
                                <th scope="col" title="Surname, name">Name</th>
                                <th scope="col" title="Email account address">Email</th>
                                <th scope="col" title="Possible values: unverified, active, blocked">Status</th>
                                <th scope="col" title="The date of last time seen">Last Login</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr data-email="<%= user.email %>">
                                    <td>
                                        <input type="checkbox" class="row-checkbox" title="Select user <%= user.email %>">
                                    </td>
                                    <td title="Full name: <%= user.name %> <%= user.surname %>">
                                        <%= user.surname %>, <%= user.name %>
                                    </td>
                                    <td class="text-truncate" style="max-width: 160px;" title="Email: <%= user.email %>">
                                        <%= user.email %>
                                    </td>
                                    <td title="Account status: <%= user.status %>">
                                        <%= user.status %>
                                    </td>
                                    <td title="Last login: <%= user.last_login ? new Date(user.last_login).toLocaleString() : 'Never' %>">
                                        <%= user.last_login ? new Date(user.last_login).toLocaleString() : 'Never' %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
                    <div class="text-center">
                        <h4 class="text-warning">Your account is not verified</h4>
                        <p class="text-muted">Please check your email and verify your account to access the dashboard.</p>
                    </div>
                </div>
            <% } %>
        </div>
    </main>


    <footer class="bg-body-tertiary text-center py-2 mt-auto small">
        &copy; Task5
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="/js/main.js"></script>
</body>
</html>
